# =================================================================
# نظام إدارة الطلاب "صُنّاع الأوائل" - إعدادات الواجهة الأمامية
# Student Management System Frontend Environment Settings
# =================================================================

# API Configuration / إعدادات API
# ----------------------------------
VITE_API_BASE_URL=http://localhost:5001/api
VITE_API_TIMEOUT=10000

# WebSocket Configuration / إعدادات WebSocket
# ----------------------------------
VITE_WS_URL=ws://localhost:5001

# Environment / البيئة
# ----------------------------------
VITE_ENV=development
VITE_APP_NAME=نظام إدارة الطلاب - صُنّاع الأوائل
VITE_APP_NAME_EN=Student Management System - Makers of Excellence

# Application Settings / إعدادات التطبيق
# ----------------------------------
VITE_APP_VERSION=1.0.0
VITE_DEFAULT_LANGUAGE=ar
VITE_SUPPORTED_LANGUAGES=ar,en

# Feature Flags / مفاتيح الميزات
# ----------------------------------
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_REAL_TIME_UPDATES=true
VITE_ENABLE_EXCEL_IMPORT=true
VITE_ENABLE_PDF_EXPORT=true
VITE_ENABLE_AI_FEATURES=false

# UI Configuration / إعدادات واجهة المستخدم
# ----------------------------------
VITE_DEFAULT_PAGE_SIZE=20
VITE_MAX_FILE_UPLOAD_SIZE=16777216
VITE_SUPPORTED_FILE_TYPES=.xlsx,.xls,.pdf,.jpg,.jpeg,.png,.gif

# Development Settings / إعدادات التطوير
# ----------------------------------
VITE_DEBUG=true
VITE_SHOW_CONSOLE_LOGS=true
VITE_ENABLE_REDUX_DEVTOOLS=true

# Performance Settings / إعدادات الأداء
# ----------------------------------
VITE_ENABLE_SERVICE_WORKER=false
VITE_CACHE_API_RESPONSES=true
VITE_API_CACHE_DURATION=300000

# Monitoring and Analytics / المراقبة والتحليلات
# ----------------------------------
# VITE_SENTRY_DSN=https://your-sentry-dsn-here@sentry.io/project-id
# VITE_GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
VITE_ENABLE_ERROR_REPORTING=false

# Social and Contact Information / معلومات التواصل الاجتماعي
# ----------------------------------
VITE_SCHOOL_WEBSITE=https://thanawiya-school.com
VITE_SCHOOL_EMAIL=info@thanawiya-school.com
VITE_SCHOOL_PHONE=+964-XXX-XXX-XXXX
VITE_SUPPORT_EMAIL=support@thanawiya-school.com

# Branding / العلامة التجارية
# ----------------------------------
VITE_LOGO_URL=/logo.png
VITE_FAVICON_URL=/favicon.ico
VITE_THEME_COLOR=#1e40af
VITE_ACCENT_COLOR=#3b82f6

# Security Settings / إعدادات الأمان
# ----------------------------------
VITE_ENABLE_CSP=true
VITE_SESSION_TIMEOUT=86400000
VITE_AUTO_LOGOUT_WARNING=300000

# Date and Time Format / تنسيق التاريخ والوقت
# ----------------------------------
VITE_DATE_FORMAT=DD/MM/YYYY
VITE_TIME_FORMAT=HH:mm
VITE_DATETIME_FORMAT=DD/MM/YYYY HH:mm
VITE_TIMEZONE=Asia/Baghdad

# Currency / العملة
# ----------------------------------
VITE_CURRENCY_CODE=IQD
VITE_CURRENCY_SYMBOL=د.ع
VITE_CURRENCY_DECIMAL_PLACES=0
VITE_THOUSAND_SEPARATOR=,

# Academic Settings / الإعدادات الأكاديمية
# ----------------------------------
VITE_CURRENT_ACADEMIC_YEAR=2024-2025
VITE_GRADE_LEVELS=10,11,12
VITE_SECTIONS=علمي,أدبي,فرنسي

# Notification Settings / إعدادات الإشعارات
# ----------------------------------
VITE_NOTIFICATION_SOUND=true
VITE_NOTIFICATION_DURATION=5000
VITE_MAX_NOTIFICATIONS=5

# Map and Location (if needed) / الخرائط والموقع (إذا لزم الأمر)
# ----------------------------------
# VITE_GOOGLE_MAPS_API_KEY=your-google-maps-api-key
# VITE_SCHOOL_LATITUDE=33.3152
# VITE_SCHOOL_LONGITUDE=44.3661

# Production Settings / إعدادات الإنتاج
# ----------------------------------
# Uncomment for production / قم بإلغاء التعليق للإنتاج
# VITE_API_BASE_URL=https://api.thanawiya-school.com
# VITE_WS_URL=wss://api.thanawiya-school.com
# VITE_ENV=production
# VITE_DEBUG=false
# VITE_SHOW_CONSOLE_LOGS=false
