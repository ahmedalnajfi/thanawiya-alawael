# =================================================================
# نظام إدارة الطلاب "صُنّاع الأوائل" - إعدادات البيئة
# Student Management System "Makers of Excellence" - Environment Settings
# =================================================================

# Basic Configuration / الإعدادات الأساسية
# ----------------------------------
FLASK_ENV=development
SECRET_KEY=your-super-secret-key-change-this-in-production
DATABASE_URL=sqlite:///thanawiya_dev.db

# Application URLs / روابط التطبيق
# ----------------------------------
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:5001

# CORS Configuration / إعدادات CORS
# ----------------------------------
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Database Configuration / إعدادات قاعدة البيانات
# ----------------------------------
# For PostgreSQL production setup:
# DATABASE_URL=postgresql://username:password@localhost:5432/thanawiya_db
# For MySQL production setup:
# DATABASE_URL=mysql://username:password@localhost:3306/thanawiya_db

# Email Configuration / إعدادات البريد الإلكتروني
# ----------------------------------
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@example.com
MAIL_PASSWORD=your-app-password
MAIL_USE_TLS=True
MAIL_USE_SSL=False
MAIL_DEFAULT_SENDER=noreply@thanawiya-school.com

# Redis Configuration / إعدادات Redis
# ----------------------------------
REDIS_URL=redis://localhost:6379/0
SOCKETIO_MESSAGE_QUEUE=redis://localhost:6379/1

# Session Configuration / إعدادات الجلسة
# ----------------------------------
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_SAMESITE=Lax
SESSION_COOKIE_HTTPONLY=True
PERMANENT_SESSION_LIFETIME=86400

# File Upload Configuration / إعدادات رفع الملفات
# ----------------------------------
MAX_CONTENT_LENGTH=16777216
UPLOAD_FOLDER=uploads
ALLOWED_EXTENSIONS=xlsx,xls,pdf,jpg,jpeg,png,gif

# Logging Configuration / إعدادات التسجيل
# ----------------------------------
LOG_LEVEL=INFO
LOG_TO_STDOUT=True
LOG_FILE_PATH=logs/app.log

# Rate Limiting / حدود المعدل
# ----------------------------------
RATELIMIT_STORAGE_URL=redis://localhost:6379/2
LOGIN_RATE_LIMIT=5 per minute
API_RATE_LIMIT=100 per hour

# Monitoring and Error Tracking / المراقبة وتتبع الأخطاء
# ----------------------------------
# SENTRY_DSN=https://your-sentry-dsn-here@sentry.io/project-id
ENABLE_PROFILING=False

# AI and OpenAI Configuration (Optional) / إعدادات الذكاء الاصطناعي (اختياري)
# ----------------------------------
# OPENAI_API_KEY=your-openai-api-key-here
# OPENAI_MODEL=gpt-3.5-turbo
# ENABLE_AI_FEATURES=False

# PDF Generation / إنتاج ملفات PDF
# ----------------------------------
WEASYPRINT_DPI=96
PDF_FONT_FAMILY=Arial,sans-serif

# Development Settings / إعدادات التطوير
# ----------------------------------
DEBUG_TOOLBAR=False
TESTING=False

# Production Settings / إعدادات الإنتاج
# ----------------------------------
# Uncomment and configure for production / قم بإلغاء التعليق والإعداد للإنتاج
# SESSION_COOKIE_SECURE=True
# SESSION_COOKIE_SAMESITE=Strict
# FLASK_ENV=production
# SSL_REDIRECT=True
# PREFERRED_URL_SCHEME=https

# School Information / معلومات المدرسة
# ----------------------------------
SCHOOL_NAME=مدرسة صُنّاع الأوائل الثانوية
SCHOOL_NAME_EN=Thanawiya Makers of Excellence School
SCHOOL_ADDRESS=العنوان هنا
SCHOOL_PHONE=+964-XXX-XXX-XXXX
SCHOOL_EMAIL=info@thanawiya-school.com

# Academic Year / السنة الدراسية
# ----------------------------------
CURRENT_ACADEMIC_YEAR=2024-2025
ACADEMIC_YEAR_START_DATE=2024-09-01
ACADEMIC_YEAR_END_DATE=2025-06-30

# Currency Settings / إعدادات العملة
# ----------------------------------
CURRENCY_CODE=IQD
CURRENCY_SYMBOL=د.ع
CURRENCY_DECIMAL_PLACES=0

# Notification Settings / إعدادات الإشعارات
# ----------------------------------
ENABLE_EMAIL_NOTIFICATIONS=True
ENABLE_SMS_NOTIFICATIONS=False
NOTIFICATION_BATCH_SIZE=50

# Backup Settings / إعدادات النسخ الاحتياطي
# ----------------------------------
BACKUP_SCHEDULE=daily
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=backups/

# Security Settings / إعدادات الأمان
# ----------------------------------
BCRYPT_LOG_ROUNDS=12
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=True
PASSWORD_REQUIRE_LOWERCASE=True
PASSWORD_REQUIRE_NUMBERS=True
PASSWORD_REQUIRE_SYMBOLS=False

# API Documentation / توثيق API
# ----------------------------------
ENABLE_SWAGGER=True
API_TITLE=Thanawiya Student Management API
API_VERSION=1.0.0

# Feature Flags / مفاتيح الميزات
# ----------------------------------
ENABLE_EXCEL_IMPORT=True
ENABLE_PDF_EXPORT=True
ENABLE_NOTIFICATIONS=True
ENABLE_ATTENDANCE_TRACKING=True
ENABLE_GRADE_MANAGEMENT=True
ENABLE_FEE_MANAGEMENT=True

# Time Zone / المنطقة الزمنية
# ----------------------------------
TIMEZONE=Asia/Baghdad
DATE_FORMAT=%Y-%m-%d
DATETIME_FORMAT=%Y-%m-%d %H:%M:%S
